sig=$tmpdir/sig.tmp
expect=$testdir/COPYING.sig
input=$srcdir/COPYING

for inbuf in $bufsizes
do
    cmd="rdiff -v -I$inbuf -f sig $input $sig" 
    run_test $cmd
    cmp $sig $expect || fail_test "$cmd"
done

