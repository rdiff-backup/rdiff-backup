srcdir='.'

. $srcdir/testcommon.sh
block_len=200
for buf in $bufsizes
do
    for old in $srcdir/*.[ch]
    do
        for new in $old $old*~
        do
            test ! -r $new && continue
            test ! -r $old && continue
            test -n "$stats" && echo $old $new

	    for hashopt in '' -Hmd4 -Hblake2
	    do
		triple_test $buf $old $new $hashopt
		triple_test $buf $new $old $hashopt
	    done
        done
    done
done
