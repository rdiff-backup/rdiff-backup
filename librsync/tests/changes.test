srcdir='.'

. $srcdir/testcommon.sh

inputdir=$srcdir/changes.input

for buf in $bufsizes
do
    old=$inputdir/01.in
    for new in $inputdir/*.in
    do
	for hashopt in '' -Hmd4 -Hblake2
	do
	    triple_test $buf $old $new $hashopt
	    triple_test $buf $new $old $hashopt 
	done
    done
done
