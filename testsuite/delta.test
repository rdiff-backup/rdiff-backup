new=$tmpdir/delta.tmp

for delta in $testdir/*.delta
do
    for inbuf in $bufsizes
    do
        cmd="../rdiff -I$inbuf patch /dev/null $delta $new"
        run_test $cmd
        expect=$testdir/`basename $delta .delta`.expect
        diff $expect $new || fail_test "$cmd"
        countdown
    done
done
